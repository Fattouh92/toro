<a href="<%=new_item_path%>" class="btn btn-primary">Add a new item</a>
<br>
<br>
<legend>Items</legend>
<table style="width:1200px;"class="table table-bordered">
  <tr>
    <td style="width:350px;"><h3>English name</h3></td>
    <td style="width:300px;"><h3>Arabic name</h3></td>
    <td style="width:300px;"><h3>Category</h3></td>
    <td style="width:150px;"><h3>Price</h3></td>
    <td style="width:120px;"><h3>Edit</h3></td>
    <td style="width:120px;"><h3>Delete</h3></td>
  </tr>
<%@items.each do |item|%>
  <tr>
    <td><strong><%= item.name%></strong></td>
    <td><strong><%= item.arabicname%></strong></td>
    <td><%= item.category.name%></td>
    <td><%= item.price %></td>
    <td><a href="<%=edit_item_path(item.id)%>" class="btn btn-primary">Edit</a></td>
    <td><a href="<%=delete_item_path(item.id)%>" class="btn btn-danger">Delete</a></td>
  </tr>
<% end %>
</table>
