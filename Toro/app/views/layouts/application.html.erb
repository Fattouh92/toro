<!DOCTYPE html>
<html>
  <head>
    <title>Toro</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="container">
      <div id="content">
        <div class="navbar navbar-fixed-top" style="padding-bottom:20px; ">
          <div class="navbar-inner" style="padding-left:30px; padding-right:30px;">
            <a class="brand" href="<%=root_path%>">Toro</a>
            <%if user_signed_in?%>
              <a class="brand" style="font-size:16px;" class="pull-left">Welcome,
                <%=current_user.username%></a>
            <% end %>
            <ul class="nav pull-right">
              <% if !user_signed_in? %>
                <li><a href="<%=new_user_session_path%>">Sign in</a></li>
              <% else %>
                <li><a href="<%=tables_path%>">Tables</a></li>
                <% if current_user.cashier?%>
                  <li><a href="<%=summary_path%>">Summary</a></li>
                <% end %>
                <% if current_user.admin?%>
                  <li><a href="<%=summary_path%>">Summary</a></li>
                  <li><a href="<%=banks_path%>">Banks</a></li>
                  <li><a href="<%=items_path%>">Items</a></li>
                  <li><a href="<%=categories_path%>">Categories</a></li>
                  <li><a href="<%=users_path%>">Users</a></li>
                <% end %>
                <li><a href="<%=edit_user_registration_path%>">Edit account</a></li>
                <li><a href="<%=destroy_user_session_path%>">Log out</a></li>
              <% end %>
            </ul>
          </div>
        </div>
        <div class="bod">
          <%= render "layouts/messages" %>
          <%= yield %>
          <div id="footer">
            <div class="wrap">
              <p style="font-size:14px">&copy; MT &middot; MH &middot; OH</p>
            </div>
          </div>
        </div>
      </div>
    </body>
  </html>
