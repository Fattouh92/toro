<!DOCTYPE html>
<html>
<head>
  <title>Toro</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%if user_signed_in?%>
  <span style="font-size:18px" class="pull-right"><strong>Welcome, <%=current_user.username%></strong></span>
  <br>
  <% end %>
  <div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="<%=root_path%>">Toro</a>
    <ul class="nav pull-right"> 
      <% if !user_signed_in? %>
        <li><a href="<%=new_user_session_path%>">Sign in</a></li>
      <% else %>
        <li><a href="<%=tables_path%>">Tables</a></li> 
        <% if current_user.admin?%>
          <li><a href="<%=items_path%>">Items</a></li>
          <li><a href="<%=categories_path%>">Categories</a></li>
          <li><a href="<%=users_path%>">Users</a></li>
        <% end %>
        <li><a href="<%=destroy_user_session_path%>">Log out</a></li>
      <% end %>
    </ul>
  </div>  
  </div>
  <div class="bod">
    <% current_uri = request.env['PATH_INFO'] %>
  <%= render "layouts/messages" %>
  <%= yield %>
   </div>
  

</body>
</html>
