<!DOCTYPE html>
<html>
<head>
  <title>Toro</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% current_uri = request.env['PATH_INFO'] %>
<div class="navbar navbar-inverse">
  <div class="navbar-inner">
    <a class="brand" href="<%=root_path%>">Toro</a>
    <ul class="nav pull-right">
      <% if !user_signed_in? %>
        <li><a href="<%=new_user_session_path%>">Sign in</a></li>
        <li><a href="<%=new_user_registration_path%>">Sign up</a></li>
      <% else %>
        <li><a href="<%=edit_user_registration_path%>">Edit Account</a></li>
        <li><a href="<%=destroy_user_session_path%>">Log out</a></li>
      <% end %>
    </ul>
  </div>  
</div>

<%= render "layouts/messages" %>

<%= yield %>

</body>
</html>
