            <div class="span2" style="width: 50px; padding-left: 15px;">
              <% if table.isEmpty == true %>
                <a href="/<%= table.id %>/order" style="text-decoration:none;"><div class="greenCircle"> <%= table.number %></div></a>
              <% else %>
                <a href="<%= order_path(table.id)%>" style="text-decoration:none;"><div class="redCircle"> <%= table.number %></div></a>
              <% end %>
              <br>
              <br>
            </div>
          <% end %>
          <% if @tablesA.blank?%>
            <% newTable = 1 %>
            <% deleteTable = 0 %>
          <% else %>
            <% newTable = @tablesA.last.number + 1 %>
            <% deleteTable = @tablesA.last.number %>
