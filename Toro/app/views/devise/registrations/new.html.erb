<% if resource.errors.any? %>
<div class="validation"><%= devise_error_messages! %></div>
<% end %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin"}) do |f| %>

  <div><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :firstname %><br />
  <%= f.text_field :firstname %></div>

  <div><%= f.label :lastname %><br />
  <%= f.text_field :lastname %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
<% end %>
