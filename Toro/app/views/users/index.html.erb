<br>
<br>
<legend>Cashiers, captains and waiters</legend>
<table style="width:1200px;"class="table table-bordered">
  <tr>
    <td style="width:350px;"><h3>Full name</h3></td>
    <td style="width:350px;"><h3>User name</h3></td>
    <td style="width:160px;"><h3>Edit</h3></td>
    <td style="width:160px;"><h3>Delete</h3></td>
  </tr>
<%@users.each do |captain|%>
<%if captain.id != current_user.id && captain.admin == false%>
  <tr>
    <td><strong><%= captain.firstname%>&nbsp;<%= captain.lastname%></strong></td>
    <td><strong><%= captain.username%></strong></td>
    <td><a href="<%=edit_user_path(captain.id)%>" class="btn btn-primary">Edit</a></td>
    <td><a href="#delete_modal" role="button" class="btn btn-danger" onClick="modalToggle()" id="LaunchDemo">Delete user</a></td>
    <div id="delete_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="modal_label">Delete user</h3>
      </div>
      <div class="modal-body">
        <h4>Are you sure you want to delete that user from the database?</h4>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <%= link_to "Delete", delete_user_path(captain.id), :class => "btn btn-danger"%>
      </div>
    </div>
  </tr>
  <%end%>
<% end %>
</table>
