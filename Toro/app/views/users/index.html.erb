<legend>Captains and waiters</legend>
<table style="width:1200px;"class="table table-bordered">
  <tr>
    <td style="width:450px;"><h3>Full name</h3></td>
    <td style="width:450px;"><h3>User name</h3></td>
    <td style="width:160px;"><h3>Delete</h3></td>
  </tr>
<%@captains.each do |captain|%>
<%if captain.id != current_user.id && captain.admin == false%>
  <tr>
    <td><strong><%= captain.firstname%><%= captain.lastname%></strong></td>
    <td><strong><%= captain.username%></strong></td>
    <td><a style="font-size : 18px;" href="#delete_modal" role="button" class="btn btn-danger" onClick="modalToggle()" id="LaunchDemo"><i class="icon-trash"></i>Delete captain</a></td>
    <div id="delete_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3 id="modal_label">Delete captain</h3>
      </div>
      <div class="modal-body">
        <h4>Are you sure you want to delete that captain from the database?</h4>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal">Cancel</button>
        <%= link_to "Delete", delete_captain_path(captain.id), :class => "btn btn-danger"%>
      </div>
    </div>
  </tr>
  <%end%>
<% end %>
</table>
